<%- include ("../partials/header.ejs"); %>

<h1>Nova Pessoa</h1>
<p><a href="/pessoas">Volta para lista de pessoas</a></p>

<form method="POST">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input
      type="text"
      class="form-control"
      name="nome"
      id="nome"
      placeholder="Nome"
      value="<%= pessoa.nome %>"
    />
  </div>

  <div class="form-group">
    <label for="cargo">Cargo</label>
    <input
      type="text"
      class="form-control"
      name="cargo"
      id="cargo"
      placeholder="Cargo"
      value="<%= pessoa.cargo %>"
    />
  </div>
  <button type="submit" class="btn btn-default">Salvar</button>
</form>

<%- include ("../partials/footer.ejs"); %>
